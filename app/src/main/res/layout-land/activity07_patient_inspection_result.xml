<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <!-- 説明 -->

    <!-- ListView -->

    <ListView
        android:id="@+id/listView07BloodPressure"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ListView07BodyTemp"
        app:layout_constraintTop_toTopOf="@+id/ListView07BodyTemp" />

    <TextView
        android:id="@+id/text07BodyTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="28dp"
        android:text="体温"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ListView07BodyTemp"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button07MoveBloodPressReg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="血圧新規登録"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ListView07BodyTemp"
        app:layout_constraintTop_toBottomOf="@+id/listView07BloodPressure" />

    <TextView
        android:id="@+id/text07BloodPressure"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="24dp"
        android:text="血圧"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/listView07BloodPressure"
        app:layout_constraintStart_toEndOf="@+id/ListView07BodyTemp" />

    <ListView
        android:id="@+id/ListView07BodyTemp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="48dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/listView07BloodPressure"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <Button
        android:id="@+id/button07MoveBodyTempReg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="体温新規登録"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ListView07BodyTemp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/ListView07BodyTemp"
        app:layout_constraintTop_toBottomOf="@+id/ListView07BodyTemp"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>