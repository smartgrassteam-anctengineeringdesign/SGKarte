<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <!-- 説明 -->

    <!-- ListView -->

    <ListView
        android:id="@+id/listView07BloodPressure"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="24dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/listView07BodyTemp"
        app:layout_constraintTop_toTopOf="@+id/listView07BodyTemp" />

    <TextView
        android:id="@+id/text07BodyTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="24dp"
        android:text="体温"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/listView07BodyTemp"
        app:layout_constraintStart_toStartOf="@+id/listView07BodyTemp" />

    <TextView
        android:id="@+id/text07BloodPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="24dp"
        android:text="血圧"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/listView07BloodPressure"
        app:layout_constraintStart_toStartOf="@+id/listView07BloodPressure" />

    <ListView
        android:id="@+id/listView07BodyTemp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/listView07BloodPressure"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <Button
        android:id="@+id/button07MoveBodyTempReg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/activity07_button_background"
        android:backgroundTint="@color/Main"
        android:text="体温新規登録"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/listView07BodyTemp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/listView07BodyTemp"
        app:layout_constraintTop_toBottomOf="@+id/listView07BodyTemp" />

    <TextView
        android:id="@+id/text07TitleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/text07Name"
        app:layout_constraintTop_toBottomOf="@+id/text07Name" />

    <TextView
        android:id="@+id/text07Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yuji Kamada"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/listView07BodyTemp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text07TitleAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="年齢"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/text07Id"
        app:layout_constraintTop_toBottomOf="@+id/text07Name" />

    <TextView
        android:id="@+id/text07Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="1"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/text07TitleId"
        app:layout_constraintTop_toBottomOf="@+id/text07Name" />

    <TextView
        android:id="@+id/text07Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="22"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/text07TitleAge"
        app:layout_constraintTop_toTopOf="@+id/text07TitleAge" />

    <TextView
        android:id="@+id/text07TitleSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="性別"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/text07Age"
        app:layout_constraintTop_toTopOf="@+id/text07Age" />

    <TextView
        android:id="@+id/text07Sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="男"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/text07TitleSex"
        app:layout_constraintTop_toTopOf="@+id/text07TitleSex" />

    <TextView
        android:id="@+id/text07TitleAffiliation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="所属"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/text07Sex"
        app:layout_constraintTop_toTopOf="@+id/text07Sex" />

    <TextView
        android:id="@+id/text07Affiliation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="旭川高専"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/text07TitleAffiliation"
        app:layout_constraintTop_toTopOf="@+id/text07TitleAffiliation" />

    <TextView
        android:id="@+id/text07TitleDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="詳細"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/text07Affiliation"
        app:layout_constraintTop_toTopOf="@+id/text07Affiliation" />

    <TextView
        android:id="@+id/text07Detail"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:text="若年高血圧で少し困っている"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/listView07BloodPressure"
        app:layout_constraintStart_toEndOf="@+id/text07TitleDetail"
        app:layout_constraintTop_toTopOf="@+id/text07TitleDetail" />

    <Button
        android:id="@+id/button07MoveBloodPressReg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/activity07_button_background"
        android:backgroundTint="@color/Main"
        android:text="血圧新規登録"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/listView07BloodPressure"
        app:layout_constraintStart_toStartOf="@+id/listView07BloodPressure"
        app:layout_constraintTop_toBottomOf="@+id/listView07BloodPressure" />

</android.support.constraint.ConstraintLayout>